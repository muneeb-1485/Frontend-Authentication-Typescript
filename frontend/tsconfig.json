{
  "compilerOptions": {
    "target": "ES6",                             
    "module": "ESNext",                         
    "lib": ["DOM", "ESNext"],                   

    "jsx": "react-jsx",                         // ✅ Enables JSX for React 17+
    "moduleResolution": "node",                 
    "esModuleInterop": true,                    
    "allowSyntheticDefaultImports": true,       

    "forceConsistentCasingInFileNames": true,   
    "strict": true,                             
    "skipLibCheck": true,                       

    "resolveJsonModule": true,                 
    "isolatedModules": true,                   
    "noEmit": true                              // ✅ Don't output JS files during development
  },
  "include": ["src"],                            // ✅ Includes all your source code
  "exclude": ["node_modules"]
}
